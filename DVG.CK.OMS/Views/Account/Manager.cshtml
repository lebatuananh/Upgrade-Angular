@{
    ViewBag.Title = "Đổi mật khẩu";
}

<script src="~/JsModel/AccountController.js"></script>

<section class="content-header">
    <h1>
        @ViewBag.Title
    </h1>
</section>
<section class="content" ng-app="Account" ng-controller="AccountController">
    <div class="row">
        <div class="col-lg-4">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="form-group">
                        <input class="form-control" ng-keypress="WhenSubmitChange($event)" placeholder="Mật khẩu hiện tại" name="ChangePasswordModel.CurrentPassword" ng-model="ChangePasswordModel.CurrentPassword" type="password" value="">
                    </div>
                    <div class="form-group">
                        <input class="form-control" ng-keypress="WhenSubmitChange($event)" placeholder="Mật khẩu mới" name="ChangePasswordModel.Password" ng-model="ChangePasswordModel.Password" type="password" value="">
                    </div>
                    <div class="form-group">
                        <input class="form-control" ng-keypress="WhenSubmitChange($event)" placeholder="Xác nhận mật khẩu mới" name="ChangePasswordModel.ConfirmPassword" ng-model="ChangePasswordModel.ConfirmPassword" type="password" value="">
                    </div>
                    <!-- Change this to a button or input when using this as a form -->
                    <a href="javascript:;" ng-click="doChangePassword()" class="btn btn-lg btn-success btn-block">Cập nhật</a>
                </div>
            </div>
        </div>
    </div>
</section>