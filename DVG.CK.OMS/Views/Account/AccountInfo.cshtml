@model DVG.WIS.PublicModel.UserLogin

@{
    Layout = null;
}
@if (null != Model)
{
    <div class="navbar-custom-menu">
        <ul class="nav navbar-nav">
            <li class="dropdown user user-menu">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                    @if (!string.IsNullOrEmpty(Model.Avatar))
                    {
                        <img src="@Model.Avatar" class="user-image" alt="User Image">
                    }
                    else
                    {
                        <img src="/Content/images/iconuser.png" class="user-image" alt="User Image">
                    }
                    <span class="hidden-xs">@Model.FullName</span>
                </a>
                <ul class="dropdown-menu">
                    <!-- User image -->
                    <li class="user-header">
                        @if (!string.IsNullOrEmpty(Model.Avatar))
                        {
                            <img src="@Model.Avatar" class="img-circle" alt="User Image">
                        }
                        else
                        {
                            <img src="/Content/images/iconuser.png" class="img-circle" alt="User Image">
                        }
                        <p>
                            @Model.FullName
                        </p>                      
                    </li>
                    <!-- Menu Footer-->
                    <li class="user-footer green-back-color">

                        <div class="pull-left">
                            <a href="/doi-mat-khau" class="btn btn-default btn-flat">Đổi mật khẩu</a>
                        </div>

                        <div class="pull-right">
                            <a href="javascript:if(confirm('Bạn có chắc chắn muốn thoát khỏi hệ thống?')) location.href='/dang-xuat'" class="btn btn-default btn-flat">Đăng xuất</a>
                        </div>
                    </li>
                </ul>
            </li>
            <!-- Control Sidebar Toggle Button -->
        </ul>
    </div>
}




